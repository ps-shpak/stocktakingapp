{
  "extends": [
    "tslint:all",
    "tslint-react"
  ],
  "rules": {
    "no-unused-variable": false,
    "ordered-imports": false,
    "no-floating-promises": false,
    "no-inferred-empty-object-type": false,
    "no-void-expression": false,
    "no-unbound-method": false,
    "match-default-export-name": false,
    "strict-boolean-expressions": false,
    "no-unsafe-any": false,
    "completed-docs": false,
    "no-non-null-assertion": false,
    "switch-final-break": [
      true,
      "always"
    ],
    "no-submodule-imports": false,
    "no-require-imports": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "arrow-return-shorthand": [
      false,
      "multiline"
    ],
    "no-import-side-effect": [
      true,
      {
        "ignore-module": "(\\.html|\\.css|\\.scss)$"
      }
    ],
    "no-import-side-effect": false,
    "prefer-function-over-method": false,
    "no-namespace": false,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "no-duplicate-imports": false,
    "linebreak-style": false,
    "no-implicit-dependencies": false,
    "newline-before-return": false,
    "newline-per-chained-call": false,
    "no-return-await": true,
    "await-promise": true,
    "no-magic-numbers": false,
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "array-type": [
      true,
      "array-simple"
    ],
    "prefer-readonly": true,
    "no-angle-bracket-type-assertion": true,
    "no-redundant-jsdoc": true,
    "prefer-method-signature": true,
    "member-access": [
      true,
      "no-public"
    ],
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "ban": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "eofline": true,
    "forin": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "jsdoc-format": true,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "label-position": true,
    "max-line-length": [
      true, 350
    ],
    "member-ordering": [
      true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      false,
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-empty-interface": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "double",
      "jsx-double"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "switch-default": true,
    "trailing-comma": [
      false
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "file-name-casing": [true, {
      "styles.ts": "kebab-case",
      "index.ts": "camel-case",
      "registerServiceWorker.ts": "camel-case",
      ".tsx": "pascal-case",
      ".*": "pascal-case"
    }],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "public/js/*.js",
      "public/old-pages/js/*.js",
      "contact_form",
      "./src/components/old-pages/assets/css/*.css"
    ]
  }
}
